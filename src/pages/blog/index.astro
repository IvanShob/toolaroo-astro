---
import '../../styles/global.css';
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Toolaroo Blog",
  "description": "AI tools guides, comparisons, and reviews to help you find the best tools for your workflow.",
  "url": "https://www.toolaroo.net/blog/"
};

const seoProps = {
  title: "AI Tools Blog – Guides, Reviews & Comparisons | Toolaroo",
  description: "In-depth guides, comparisons, and reviews of the best AI tools. Find out which AI tools are worth your time and money.",
  type: "website",
  schema: schemaData
};
---

<Layout title="Blog" description="AI tools guides and comparisons" seoProps={seoProps}>
  <section class="py-20 sm:py-32 pb-3 border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 leading-tight">
        AI Tools <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Blog</span>
      </h1>
      <p class="text-lg sm:text-xl text-slate-600 max-w-2xl mx-auto">
        In-depth guides, comparisons, and reviews to help you find the right AI tools for your workflow.
      </p>
    </div>
  </section>

  <section class="py-12 sm:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <a
            href={`/blog/${post.id.replace(/\.md$/, '')}/`}
            class="group bg-white rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden border border-slate-200 hover:border-blue-300 flex flex-col"
          >
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-2.5 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">
                  {post.data.category}
                </span>
                <span class="text-xs text-slate-400">{post.data.readTime} min read</span>
              </div>
              <h2 class="text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-3 leading-snug">
                {post.data.title}
              </h2>
              <p class="text-sm text-slate-600 line-clamp-3 flex-grow">
                {post.data.description}
              </p>
            </div>
            <div class="px-6 py-4 border-t border-slate-100 bg-slate-50 flex items-center justify-between">
              <time class="text-xs text-slate-400">
                {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <span class="text-sm font-semibold text-blue-600 group-hover:underline">Read more →</span>
            </div>
          </a>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-20 text-slate-400">
          <p class="text-lg">No posts yet — check back soon.</p>
        </div>
      )}
    </div>
  </section>
</Layout>
