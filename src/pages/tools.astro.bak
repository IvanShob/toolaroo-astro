---
import '../styles/global.css';
import ToolList from '../components/ToolList.jsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All AI Tools – Toolaroo</title>
    <meta name="description" content="Explore every AI tool available across all categories." />
  </head>

  <body class="bg-gray-100 min-h-screen flex flex-col items-center p-4">
    <!-- Hero Section -->
    <header
      class="w-full max-w-5xl text-center py-10 px-4
             bg-gray-50 text-gray-900 rounded-xl shadow-lg mb-10"
    >
      <h1 class="text-3xl sm:text-4xl font-bold mb-2">
        All AI Tools
      </h1>
      <p class="text-base sm:text-lg">
        Explore every AI tool available across all categories.
      </p>
    </header>

    <!-- Main Content -->
    <main class="w-full max-w-5xl px-4 mx-auto">
      <ToolList client:only="react" />
    </main>

    <!-- Footer -->
    <footer class="mt-16 w-full max-w-5xl text-center text-gray-500 text-sm pb-8">
      © 2026 Toolaroo. All rights reserved.
    </footer>
  </body>
</html>
